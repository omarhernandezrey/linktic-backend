# Variables por defecto para arrancar por primera vez
# Copia este archivo a `.env` y ajusta según tu entorno

# Productos DB
PRODUCTS_DB_NAME=products
PRODUCTS_DB_USER=products
PRODUCTS_DB_PASS=products
PRODUCTS_DB_PORT=5433

# Inventario DB
INVENTORY_DB_NAME=inventory
INVENTORY_DB_USER=inventory
INVENTORY_DB_PASS=inventory
INVENTORY_DB_PORT=5434

# Puertos de servicios
PRODUCTS_PORT=8081
INVENTORY_PORT=8082

# Comunicación entre servicios
INTERSERVICE_API_KEY=local-secret
HTTP_CLIENT_TIMEOUT_MS=1500
HTTP_CLIENT_MAX_RETRIES=2

# URLs opcionales (normalmente no hace falta cambiarlas)
# PRODUCTS_DB_URL=jdbc:postgresql://postgres-products:5432/products
# INVENTORY_DB_URL=jdbc:postgresql://postgres-inventory:5432/inventory
